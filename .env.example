#=============================================================================
# MIRAI Hub - Environment Configuration
#=============================================================================
# Copy this file to .env and adjust the values as needed.
# Run: cp .env.example .env
# Then: php artisan key:generate
#=============================================================================

#-----------------------------------------------------------------------------
# Application Settings
#-----------------------------------------------------------------------------
APP_NAME="MIRAI Hub"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

#-----------------------------------------------------------------------------
# Security
#-----------------------------------------------------------------------------
BCRYPT_ROUNDS=12

#-----------------------------------------------------------------------------
# Logging
#-----------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

#-----------------------------------------------------------------------------
# Database Configuration
#-----------------------------------------------------------------------------
# Default: PostgreSQL (Recommended)
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=mirai_hub
DB_USERNAME=postgres
DB_PASSWORD=

# Option 2: MySQL
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=mirai_hub
# DB_USERNAME=root
# DB_PASSWORD=

# Option 3: SQLite (Simplest for quick testing)
# DB_CONNECTION=sqlite
# Note: Create the database file first: touch database/database.sqlite

#-----------------------------------------------------------------------------
# Session & Cache
#-----------------------------------------------------------------------------
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
# CACHE_PREFIX=

#-----------------------------------------------------------------------------
# Queue & Broadcasting
#-----------------------------------------------------------------------------
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

#-----------------------------------------------------------------------------
# Filesystem
#-----------------------------------------------------------------------------
FILESYSTEM_DISK=local

#-----------------------------------------------------------------------------
# Redis (Optional)
#-----------------------------------------------------------------------------
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#-----------------------------------------------------------------------------
# Memcached (Optional)
#-----------------------------------------------------------------------------
MEMCACHED_HOST=127.0.0.1

#-----------------------------------------------------------------------------
# Mail Configuration
#-----------------------------------------------------------------------------
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@mirai-hub.test"
MAIL_FROM_NAME="${APP_NAME}"

#-----------------------------------------------------------------------------
# AWS (Optional)
#-----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

#-----------------------------------------------------------------------------
# Vite
#-----------------------------------------------------------------------------
VITE_APP_NAME="${APP_NAME}"

#=============================================================================
# THIRD PARTY SERVICES
#=============================================================================

#-----------------------------------------------------------------------------
# Google OAuth (Optional - for "Login with Google" feature)
#-----------------------------------------------------------------------------
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing
# 3. Go to APIs & Services > Credentials
# 4. Create OAuth 2.0 Client IDs
# 5. Add Authorized redirect URI: http://localhost:8000/auth/google/callback
# 6. Copy Client ID and Client Secret below
#-----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

#-----------------------------------------------------------------------------
# Firebase Auth (Optional - for client-side Google Sign-In)
#-----------------------------------------------------------------------------
# 1. Go to https://console.firebase.google.com/
# 2. Create a new project or select existing
# 3. Go to Project Settings > General > Your apps
# 4. Register a web app and copy the config values
#-----------------------------------------------------------------------------
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
